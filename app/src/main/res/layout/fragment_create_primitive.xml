<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Quire3D.fragments.CreatePrimitiveFragment">


    <ImageButton
        android:id="@+id/createCube"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/createCube"
        android:src="@android:drawable/arrow_up_float" />

    <ImageButton
        android:id="@+id/createSphere"
        android:layout_width="416dp"
        android:layout_height="19dp"
        android:contentDescription="@string/createSphere"
        android:src="@android:drawable/arrow_up_float" />

    <ImageButton
        android:id="@+id/createQuad"
        android:layout_width="416dp"
        android:layout_height="20dp"
        android:contentDescription="@string/createQuad"
        android:src="@android:drawable/arrow_up_float" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/delnode"
        android:src="@android:drawable/arrow_up_float" />

</LinearLayout>
