<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#666666"
    android:weightSum="4"
    tools:context="com.Quire3D.fragments.ToolbarFragment">

    <TextView
        android:id="@+id/Duplicate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:text="@string/Duplicate"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/Translate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/Translate"
        android:src="@mipmap/arrow"
        android:scaleType="fitCenter"
        android:background="#D6D7D7"/>

    <ImageButton
        android:id="@+id/Scale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/Scale"
        android:src="@mipmap/square"
        android:scaleType="fitCenter"
        android:background="#D6D7D7"/>

    <ImageButton
        android:id="@+id/Rotate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/Rotate"
        android:src="@mipmap/arc"
        android:scaleType="fitCenter"
        android:background="#D6D7D7"/>
</LinearLayout>
